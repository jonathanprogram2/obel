{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "NodeNext",                              
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./lib",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                              
  },
  "include": ["lib"]
}
